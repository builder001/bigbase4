{% extends 'base.html.twig' %}

{% block title %}New study{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 border-right">
            <h4 class="d-flex">
                <span class="text-muted">Actions</span>
            </h4>
            <div class="btn-group-vertical" role="group">
                <a href="{{ path('study_index') }}" class="btn btn-primary btn-sm"><i class="fas fa-list-alt" aria-hidden="true"></i> List studies</a>
            </div>
        </div>
        <div class="col-sm-4">
            <h4 class="d-flex">
                <span class="text-muted">Create study</span>
            </h4>
            {{ form_start(form) }}
            {{ form_row(form.code) }}
            {{ form_row(form.title) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save" aria-hidden="true"></i> Create study
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}