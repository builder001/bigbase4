{% extends 'base.html.twig' %}

{% block title %}User show{% endblock %}

{% block body %}
    <nav class="mt-2" aria-label="breadcrumb">
        <ol class="breadcrumb bg-warning">
            <li class="breadcrumb-item"><a href="{{ path('app_homepage') }}">Home</a> </li>
            <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Users list</a> </li>
            <li class="breadcrumb-item active" aria-current="page">User</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-3 border-right">
            <h4 class="d-flex">
                <span class="text-muted">Actions</span>
            </h4>
            <div class="btn-group-vertical">
                <a href="{{ path('admin_user_new') }}" class="btn btn-sm btn-block btn-primary"><i class="fas fa-plus" aria-hidden="true"></i> New user</a>
                <a href="#" class="btn btn-success btn-sm"><i class="fas fa-edit" aria-hidden="true"></i> Edit user</a>
                {{ include('admin/user/_delete_form.html.twig', {users:users}, with_context=false) }}
            </div>
        </div>

        <div class="col-sm-4">
            <h4 class="d-flex">
                <span class="text-muted">User</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-125">
                    <div><h6 class="my-0">Id</h6> </div>
                    <span class="text-muted">{{ users.id }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-125">
                    <div><h6 class="my-0">Email</h6> </div>
                    <span class="text-muted">{{ users.email }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-125">
                    <div><h6 class="my-0">Role</h6> </div>
                    <span class="text-muted">{{ users.roles|json_encode() }}</span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}