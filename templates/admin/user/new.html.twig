{% extends 'base.html.twig' %}

{% block title %}New user{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-3 border-right">
            <h4 class="d-flex">Actions</h4>
            <div class="btn-group-vertical" role="group">
                <a href="{{ path('admin_user_index') }}" class="btn btn-primary btn-sm"><i class="fas fa-list-alt" aria-hidden="true"></i> List users</a>
            </div>
        </div>
        <div class="col-sm-4">
            <h4 class="d-flex">
                <span class="text-muted">Create user</span>
            </h4>
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.roles) }}
            {{ form_row(form.plainPassword.first, {'label' : 'Password'}) }}
            {{ form_row(form.plainPassword.second, {'label' : 'Repeat Password'}) }}
            <button type="submit" class="btn btn-warning"><i class="fas fa-save" aria-hidden="true"></i> Create user</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}